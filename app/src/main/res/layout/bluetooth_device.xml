<?xml version="1.0" encoding="utf-8"?>
<!--    android:background="@drawable/outline_black"-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/device_pan"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bluetooth_device_bg"
    android:layout_margin="10dp"
    android:padding="20dp">
    <ImageView
        android:src="@drawable/smart_wathch_icon"
        android:layout_margin="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/deviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Samsung watch"
        android:layout_weight="1"
        android:fontFamily="@font/nats_regular"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/selected"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:visibility="visible"
        android:src="@drawable/setting_icon_blue"/>


</LinearLayout>